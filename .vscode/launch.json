{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Django + Celery (全部啟動)",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/manage.py",
            "args": [
                "runserver",
                "0.0.0.0:8000"
            ],
            "django": true,
            "justMyCode": false,
            "console": "integratedTerminal"
        },
        {
            "name": "Celery Worker",
            "type": "python",
            "request": "launch",
            "module": "celery",
            "args": [
                "-A",
                "unisv",
                "worker",
                "-l",
                "INFO"
            ],
            "justMyCode": false,
            "console": "integratedTerminal"
        },
        {
            "name": "Celery Beat",
            "type": "python",
            "request": "launch",
            "module": "celery",
            "args": [
                "-A",
                "unisv",
                "beat",
                "-l",
                "INFO"
            ],
            "justMyCode": false,
            "console": "integratedTerminal"
        }
    ],
    "compounds": [
        {
            "name": "啟動 Django + Celery (一鍵啟動)",
            "configurations": [
                "Django + Celery (全部啟動)",
                "Celery Worker",
                "Celery Beat"
            ]
        }
    ]
}
